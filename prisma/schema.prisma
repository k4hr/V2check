
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  telegramId         String    @unique
  subscriptionUntil  DateTime?
  favorites          Favorite[]
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  title     String
  url       String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
